@model MonAnModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm sản phẩm mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Ten"></label>
        <input asp-for="Ten" class="form-control" />
        <span asp-validation-for="Ten" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gia"></label>
        <input asp-for="Gia" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <<div class="form-group">
        <label asp-for="Loai"></label>
        <select asp-for="Loai" class="form-control">
            <option value="">-- Chọn loại --</option>
            <option value="Món ăn chính">Món ăn chính</option>
            <option value="Món ăn vặt">Món ăn vặt</option>
            <option value="Món tráng miệng">Món tráng miệng</option>
            <option value="Đồ uống">Đồ uống</option>
            <option value="Món Nhật">Món Nhật</option>
            <option value="Đồ ăn nhanh">Đồ ăn nhanh</option>
        </select>
        <span asp-validation-for="Loai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HinhAnh"></label>
        <input asp-for="HinhAnh" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="HinhAnh" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
