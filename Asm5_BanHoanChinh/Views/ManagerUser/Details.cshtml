@model Asm5_BanHoanChinh1.Models.ApplicationUser
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Chi tiết người dùng</h2>
<p><strong>Họ tên:</strong> @Model.HoTen</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Số điện thoại:</strong> @Model.Sdt</p>
<p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
<p><strong>Ngày sinh:</strong> @Model.NgaySinh</p>
<p><strong>Vai trò:</strong> @Model.VaiTro</p>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
