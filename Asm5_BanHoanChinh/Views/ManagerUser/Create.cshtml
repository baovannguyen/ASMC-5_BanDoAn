@model Asm5_BanHoanChinh1.Models.ApplicationUser
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Thêm người dùng</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HoTen"></label>
        <input asp-for="HoTen" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="Sdt"></label>
        <input asp-for="Sdt" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="DiaChi"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NgaySinh"></label>
        <input type ="date" asp-for="NgaySinh" class="form-control" />
    </div>
    
    <select name="vaitro" id="vaitro" required>
        <option value="">-- Chọn quyền --</option>
        <option value="AdminViewProduct">Quản trị viên</option>
        <option value="SalesViewProduct">Nhân viên kinh doanh</option>
        <option value="UserViewProduct">Người Dùng</option>
    </select>
    <div class="form-group">
        <label for="password">Mật khẩu</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Tạo</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
