<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asm5_BanHoanChinh1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Asm5_BanHoanChinh1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        .footer {
           
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }
        /* Navbar Styling */
        .navbar {
            background-color: #E53935 !important;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: white !important;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #FDD835 !important;
            }

        /* Dropdown Styling */
        .dropdown-menu {
            background-color: #ffffff; /* Nâu socola */
        }

        .dropdown-item:hover {
            background-color: #FDD835; /* Vàng nhạt */
            color: #000;
        }

        /* Button Styling */
        .btn-primary {
            background-color: #D2691E; /* Cam đất */
            border: none;
        }

            .btn-primary:hover {
                background-color: #FDD835; /* Vàng nhạt */
                color: black;
            }

        /* Footer Styling */
        .footer {
            background-color: #E53935; /* Đỏ */
            color: white;
            padding: 15px 0;
            text-align: center;
        }


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "MonAn")">
                    <img src="~/img/BaoBaoo.png" alt="Logo" style="width: 150px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">


                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "MonAn")"> <i class="fa-solid fa-house"></i>   Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "MonAn")"> <i class="fa-solid fa-utensils"></i> Món Ăn</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="danhMucDropdown" role="button">
                                <i class="fa-solid fa-list"></i> Danh Mục
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="danhMucDropdown">
                                @foreach (var loai in ViewBag.LoaiList)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "MonAn", new { loai = loai })">
                                            @loai
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>


                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user"></i> Hi, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-action="PaidOrders" asp-controller="DonHang">Đơn Hàng</a></li>
                                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="User">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="User"><i class="fa fa-sign-in-alt"></i> Login</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i> Cart</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #D2691E; color: white;" class="py-3 mt-4 border-top">

        <div class="container text-center">
            &copy; 2025 - Asm5_BanHoanChinh1 - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>