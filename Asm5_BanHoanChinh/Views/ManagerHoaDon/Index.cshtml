@model List<Asm5_BanHoanChinh1.Models.DonHangModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Bạn không có quyền xem</h1>

    <!-- Nội dung chính -->
    <div class="container">
        <h2 class="mt-4">Quản Lý Đơn Đặt Hàng</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Mã Đơn Hàng</th>
                    <th>Ngày Đặt</th>
                    <th>Trạng Thái</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.NgayDat</td>
                        <td>@order.TrangThai</td>
                        <td>

                            <a href="@Url.Action("DeleteOrders", new { id = order.Id })" class="btn btn-danger btn-sm">Xóa</a>
                            <a href="@Url.Action("EditOrders", new { id = order.Id })" class="btn btn-warning btn-sm">Chỉnh</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


