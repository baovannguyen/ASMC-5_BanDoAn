
    <style>
        body {
            background-color: #FFF3E0; /* Màu nền nhẹ nhàng */
        }

        .card {
            border: none;
            overflow: hidden;
            border-radius: 12px;
        }

        .card-header {
            background: linear-gradient(135deg, #E53935, #D2691E);
            color: white;
            font-weight: bold;
            padding: 15px;
            text-align: center;
        }

        .img-container {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #FDD835; /* Màu nền vàng nhạt */
            padding: 15px;
            border-radius: 12px 0 0 12px;
        }

            .img-container img {
                width: 100%;
                max-height: 400px;
                object-fit: cover;
                border-radius: 10px;
            }

        .btn-primary {
            background-color: #E53935;
            border: none;
            font-weight: bold;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #C62828;
            }

        .similar-item img {
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .card-footer {
            background-color: #FFF3E0;
            text-align: center;
            font-size: 1.1rem;
        }
    </style>

<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header">
                🍽️ <h2 class="d-inline">@Model.Ten</h2>
            </div>
            <div class="row g-0">
                <div class="col-md-6 img-container">
                    <img src="~/img/@Model.HinhAnh" class="img-fluid" alt="@Model.Ten">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h3 class="card-title text-danger">@Model.Ten</h3>
                        <p class="card-text text-muted">@Model.MoTa</p>
                        <p class="card-text"><strong>💰 Giá: </strong><span class="text-danger">@Model.Gia.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span></p>
                        <p class="card-text"><strong>🍛 Loại: </strong>@Model.Loai</p>
                        <a class="btn btn-primary w-100 mt-3 add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-id="@Model.Id">
                            🛒 Thêm vào giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                🍴 <strong>Chúc bạn ngon miệng!</strong> 🍴
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
