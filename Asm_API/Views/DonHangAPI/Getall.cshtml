<table class="table table-hover table-striped table-bordered shadow-sm mt-3">
    <thead class="table-dark">
        <tr class="text-center">
            <th>ID</th>
            <th>Khách Hàng</th>
            <th>Ngày Đặt</th>
            <th>Trạng Thái</th>
            <th>Tổng tiền</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody class="align-middle">
        @foreach (var r in Model)
        {
            <tr>
                <td class="text-center">@r.Id</td>
                <td>@r.KhachHangId</td>
                <td>@r.NgayDat</td>
                <td>@r.TrangThai</td>
                <td class="text-end">@r.TongTien.ToString("C")</td>
                <td class="text-center">
                    <a asp-action="UpdateDonHang" asp-route-id="@r.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
                <td class="text-center">
                    <form asp-action="DeleteDonHang" method="post" onsubmit="return confirm('Are you sure?')">
                        <input type="hidden" value="@r.Id" name="Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="https://localhost:7063/Manager" class="btn btn-sm btn-secondary">Quay lại</a>

